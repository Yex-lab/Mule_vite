# Application Configuration
NODE_ENV=development
PORT=4002
API_PREFIX=api
APP_TITLE=Pravia AI Workflow API
APP_DESCRIPTION=AI Workflow services and intelligence API for the Pravia ecosystem
APP_VERSION=1.0.0
SERVER_NAME=IDP Server

# Swagger Configuration
SWAGGER_ICON_FILENAME=logo.svg
SWAGGER_PERSIST_AUTH=true
SWAGGER_GRADIENT_ENABLED=true
SWAGGER_GRADIENT_COLORS="#E67E22, #5DADE2, #2E86AB"
SWAGGER_GRADIENT_HEIGHT=60px
SWAGGER_WAVE_HEIGHT=25px

# Authentication
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI/ML Services (placeholder for future integrations)
OPENAI_API_KEY=your-openai-api-key
AZURE_COGNITIVE_ENDPOINT=your-azure-endpoint
AZURE_COGNITIVE_KEY=your-azure-key

# Document Storage
DOCUMENT_STORAGE_PATH=./uploads
MAX_FILE_SIZE=52428800

# Logging
LOG_LEVEL=info
