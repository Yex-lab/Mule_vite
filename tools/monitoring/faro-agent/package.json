{
  "name": "faro-agent",
  "version": "1.0.0",
  "description": "Desktop app for monitoring SaaS application health",
  "author": "Tony Henderson",
  "repository": "https://github.com/asyml8/faro",
  "main": "out/main/main.js",
  "private": true,
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "build:mac": "pnpm build && electron-builder --mac",
    "build:win": "pnpm build && electron-builder --win",
    "build:linux": "pnpm build && electron-builder --linux"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fastify/cors": "^10.0.1",
    "@iconify/react": "^6.0.2",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.2",
    "@tanstack/react-query": "^5.0.0",
    "axios": "^1.12.2",
    "better-sqlite3": "^11.7.0",
    "dayjs": "^1.11.18",
    "fastify": "^5.2.0",
    "framer-motion": "^12.23.22",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.3.0",
    "typescript": "^5.9.2",
    "vite": "^5.4.11"
  },
  "build": {
    "appId": "com.asyml8.faro-agent",
    "productName": "Faro Agent",
    "npmRebuild": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    }
  }
}
